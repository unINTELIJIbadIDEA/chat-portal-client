<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>

<AnchorPane id="chat"
            styleClass="chat"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.controllers.ChatController">

   <stylesheets>
      <URL value="@../../style/styleChat.css" />
   </stylesheets>

   <children>

      <VBox fx:id="messageVBox"
            spacing="10.0"
            AnchorPane.topAnchor="10.0"
            AnchorPane.leftAnchor="10.0"
            AnchorPane.rightAnchor="10.0"
            AnchorPane.bottomAnchor="70.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <children>
            <ListView fx:id="messageList"
                      VBox.vgrow="ALWAYS"/>
         </children>
      </VBox>

      <!-- Panel dolny z polem tekstowym i przyciskami -->
      <HBox spacing="10.0"
            AnchorPane.leftAnchor="20.0"
            AnchorPane.rightAnchor="20.0"
            AnchorPane.bottomAnchor="10.0">
         <children>
            <TextField fx:id="messageField"
                       HBox.hgrow="ALWAYS"
                       prefHeight="46.0" />

            <Button fx:id="createGameButton"
                    mnemonicParsing="false"
                    text="ðŸš¢ Gra"
                    styleClass="button"
                    prefHeight="46.0"
                    prefWidth="100.0"/>

            <Button fx:id="sendButton"
                    onAction="#sendMessage"
                    mnemonicParsing="false"
                    text="WyÅ›lij"
                    styleClass="button"
                    prefHeight="46.0"
                    prefWidth="120.0"/>
         </children>
      </HBox>

   </children>
</AnchorPane>