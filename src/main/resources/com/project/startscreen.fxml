<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<AnchorPane fx:id="HomeScreen"
            id="HomeScreen"
            prefHeight="470.0" prefWidth="415.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.controllers.StartScreenController">

   <stylesheets>
      <URL value="@../../style/styleStart.css" />
   </stylesheets>

   <children>
      <Rectangle layoutX="40.0" layoutY="35.0"
                 width="335.0" height="405.0"
                 styleClass="start-rectangle" />

      <ImageView layoutX="92.0" layoutY="35.0"
                 fitHeight="190.0" fitWidth="230.0"
                 styleClass="start-logo">
         <image>
            <Image url="@../../image/logo.png" />
         </image>
      </ImageView>

      <Text fx:id="TextScane"
            id="TextScane"
            layoutX="85.0" layoutY="233.0"
            text="WITAJ NA TEXTPORTALU"
            wrappingWidth="245.0"
            strokeType="OUTSIDE" strokeWidth="0.0" />

      <VBox layoutX="108.0" layoutY="283.0"
            prefHeight="116.0" prefWidth="198.0"
            styleClass="start-button-box">
         <children>
            <Button fx:id="ButtonLogin"
                    prefHeight="40.0" prefWidth="200.0"
                    maxWidth="200.0"
                    text="Zaloguj"
                    styleClass="start-button"/>
            <Button fx:id="ButtonSignUp"
                    prefHeight="40.0" prefWidth="200.0"
                    maxWidth="200.0"
                    text="Zarejestruj"
                    styleClass="start-button"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
